<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.opengl_es">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".OpenGLES10CubeActivity"></activity>
        <activity android:name=".OpenGLES20TriangleActivity"></activity>
        <activity android:name=".OpenGLES20LightActivity"></activity>
        <activity android:name=".OpenGLES10TriangleActivity"></activity>
        <activity android:name=".OpenGLES10PointActivity"></activity>
        <activity android:name=".OpenGLES20PointActivity"></activity>
        <activity android:name=".OpenGLES20LineActivity"></activity>
        <activity android:name=".OpenGLES20TextureActivity"></activity>
        <activity android:name=".WaveTestActivity"></activity>
        <activity android:name=".ShapeAnimatorActivity"></activity>
        <activity android:name=".GeometryAnimationActivity"></activity>
    </application>

</manifest>